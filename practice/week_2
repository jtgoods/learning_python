# a scoreboard tracker, designed to take user input and stop when one team reaches a designated score
score1 = 0
score2 = 0
winning = int(input("Winning score? "))
while score1 < winning and score2 < winning:
    score1 += int(input("Points for player 1?"))
    score2 += int(input("Points for player 2?"))
if score1 >= winning:
    print("Player 1 wins!")    
elif score2 >= winning:
    print("Player 2 wins!")   

# OR

score1 = 0
score2 = 0
winning = int(input("Winning score? "))
while score1 < winning and score2 < winning:
    score1 += int(input("Points for player 1?"))
    score2 += int(input("Points for player 2?"))
    if score1 >= winning:
        print("Player 1 wins!")  
        break
    elif score2 >= winning:
        print("Player 2 wins!")
        break 
#END
# with input validation to make sure that points entered are positive, below
score1 = 0
score2 = 0
winning = int(input("Winning score? "))
while score1 < winning and score2 < winning:
    add1 = 0
    while add1 <= 0:
        add1 = int(input("Points for player 1?"))
        if add1 > 0:
            break
        print("Points must be a positive integer!")
    score1 += add1
    add2 = 0
    while add2 <= 0:
        add2 = int(input("Points for player 2?"))
        if add2 >0:
            break
        print("Points must be a positive integer!")
    score2 += add2
    if score1 >= winning:
        print("Player 1 wins!")  
        break
    elif score2 >= winning:
        print("Player 2 wins!")
        break  
